# Database (Neon Postgres)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Cron protection (set a random secret; Vercel Cron sends this in the request)
CRON_SECRET=your-cron-secret

# Seed: email for CEO user
CEO_EMAIL=ceo@example.com

# Webhook verification: JSON map of system key -> secret (runtime verification)
# SYSTEM_WEBHOOK_SECRETS_JSON={"investor-portal":"sec_xxx","df-crm":"sec_yyy"}

# WorkOS AuthKit
WORKOS_API_KEY=sk_xxx
WORKOS_CLIENT_ID=client_xxx
WORKOS_COOKIE_PASSWORD=32-or-more-character-secret-for-session-encryption
WORKOS_REDIRECT_URI=http://localhost:3000/callback

# Optional: AI Summary
OPENAI_API_KEY=sk-xxx

